<?xml version="1.0"?>
<odoo>
  <report id="action_newbiiz_sale_order_report"
          string="Newbiiz POS Report"
          model="sale.order"
          report_type="qweb-pdf"
          name="sale_newbiiz.newbiiz_sale_template"/>

  <template id="newbiiz_sale_template">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <!-- Report header content -->
          <t t-foreach="docs" t-as="o">
            <!-- Report row content -->
            <div class="row">
              <div class="col-xs-6">
                <div class="col-xs-4">Customer Number</div>
                <div class="col-xs-8" t-field="o.partner_id.name"/>
                <br/>
                <div class="col-xs-4">Invoice Number</div>
                <div class="col-xs-8" t-field="o.name"/>
                <br/>
                <div class="col-xs-4">Quantity</div>
                <div class="col-xs-8" t-esc="sum([line.product_uom_qty for line in o.order_line])"/>
                <br/>
                <div class="col-xs-4">Sale Price</div>
                <div class="col-xs-8" t-esc="sum([line.price_unit for line in o.order_line])"/>
                <br/>
                <div class="col-xs-4">Order Date</div>
                <div class="col-xs-8" t-field="o.confirmation_date" t-options="{'widget': 'date'}"/>
                <br/>
                <div class="col-xs-4">Warehouse</div>
                <div class="col-xs-8" t-field="o.warehouse_id"/>
              </div>

              <div class="col-xs-6">
                <div class="col-xs-4">Billing Info</div>
                <div class="col-xs-8">
                  <div class="col-sx-6" t-field="o.partner_id.company_id"/>
                  <div class="col-sx-6" t-field="o.partner_id.street"/>
                  <div class="col-sx-6" t-field="o.partner_id.street2"/>
                  <div class="col-sx-6" t-field="o.partner_id.city"/>
                  <div class="col-sx-6" t-field="o.partner_id.state_id"/>
                  <div class="col-sx-6" t-field="o.partner_id.country_id"/>
                  <div class="col-sx-6" t-field="o.partner_id.zip"/>
                </div>
                <br/>
                <div class="col-xs-4">Shipping Info</div>
                <div class="col-xs-8">
                  <div class="col-sx-6" t-field="o.partner_id.company_id"/>
                  <div class="col-sx-6" t-field="o.partner_id.street"/>
                  <div class="col-sx-6" t-field="o.partner_id.street2"/>
                  <div class="col-sx-6" t-field="o.partner_id.city"/>
                  <div class="col-sx-6" t-field="o.partner_id.state_id"/>
                  <div class="col-sx-6" t-field="o.partner_id.country_id"/>
                  <div class="col-sx-6" t-field="o.partner_id.zip"/>
                </div>
              </div>
              <br/>
              <div class="col-xs-12">
                <t t-foreach="o.order_line" t-as="line">
                  <div t-field="line.product_id.ma_labs_list_no"/>
                  <div t-field="line.product_id.item_no"/>
                  <div t-field="line.product_id.mfr_part_no"/>
                </t>
              </div>

            </div>
            <br/>
            <br/>
          </t>
          <!-- Report footer content -->
        </div>
      </t>
    </t>
  </template>
</odoo>