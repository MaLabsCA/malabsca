<odoo>
  <record model="ir.ui.view" id="sale_newbiiz_order_form">
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="model">sale.order</field>
    <field name="name">sale_newbiiz.order.form</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <data>
        <!-- todo more filter -->
        <xpath expr="//tree" position="attributes">
          <attribute name="decoration-danger">is_danger</attribute>
        </xpath>
        <xpath expr="//tree" position="inside">
          <field name="is_danger" invisible="1"/>
        </xpath>

        <field name="partner_shipping_id" position="after">
          <field name="resell_cert"/>
        </field>
        <field name="payment_term_id" position="after">
          <field name="po"/>
        </field>
      </data>
    </field>
  </record>
</odoo>