<odoo>
  <record model="ir.ui.view" id="sale_newbiiz_order_form">
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="model">sale.order</field>
    <field name="name">sale_newbiiz.order.form</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <data>
        <!-- todo more filter -->
        <xpath expr="//tree" position="attributes">
          <attribute name="decoration-danger">is_danger</attribute>
        </xpath>
        <xpath expr="//tree" position="inside">
          <field name="is_danger" invisible="1"/>
        </xpath>
      </data>
    </field>
  </record>

  <record model="ir.ui.view" id="view_partner_newbiiz_form">
    <field eval="True" name="active"/>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
          <page string="Customer">
            <group>
              <group string="Credit Information">
                <!--<field name="x_studio_field_h5OQj" string="Credit Line"/>-->
                <field name="credit_limit" string="Credit Limit"/>
              </group>
            </group>
          </page>
        </xpath>
      </data>
    </field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="model">res.partner</field>
    <field name="name">view.partner_newbiiz.form</field>
    <field name="type">form</field>
  </record>
</odoo>