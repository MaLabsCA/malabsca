<odoo>
  <data noupdate="1">
    <record id="email_template_daily_report" model="mail.template">
      <field name="name">Daily Report Remind</field>
      <field name="model_id" ref="base.model_res_users"/>
      <field name="subject">Report Remind</field>
      <field name="email_from">${object.sudo().create_uid.company_id.email | safe}</field>
      <field name="email_to">${object.email|safe}</field>
      <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear ${object.name}
        <br/><br/>
        Here is remind for submitting Daily Work Report from ${object.company_id.name}.
        <br/><br/>
        Best regards,
    </p>
</div></field>
      <field name="lang">${object.partner_id.lang}</field>
      <field name="user_signature" eval="False"/>
      <field name="auto_delete" eval="True"/>
    </record>
  </data>
</odoo>