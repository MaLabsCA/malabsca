<odoo>
  <data noupdate="1">
    <record id="email_template_daily_report" model="mail.template">
      <field name="name">Daily Report Remind</field>
      <field name="model_id" ref="base.model_res_users"/>
      <field name="subject">Report Remind</field>
      <field name="email_from">${object.sudo().create_uid.company_id.email | safe}</field>
      <field name="email_to">${object.email|safe}</field>
      <field name="reply_to">${object.sudo().create_uid.email | safe}</field>
      <field name="body_html">Please submitted report for this day.</field>
      <field name="lang">${object.partner_id.lang}</field>
      <field name="user_signature" eval="False"/>
      <field name="auto_delete" eval="True"/>
    </record>
  </data>
</odoo>