<?xml version="1.0"?>
<odoo>
  <data>

    <!-- EDI product malabscad record form view -->
    <record id="malabscad_record_form" model="ir.ui.view">
      <field name="name">edi.product.malabscad.record.form</field>
      <field name="model">edi.product.malabscad.record</field>
      <field name="inherit_id" ref="edi_product.record_form"/>
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <xpath expr="//group[@name='basic']" position="after">
          <group>
            <field name="weight"/>
          </group>
        </xpath>
        <field name="description" position="replace">
          <field name="website_description"/>
        </field>
      </field>
    </record>

    <!-- EDI product malabscad record tree view -->
    <record id="malabscad_record_tree" model="ir.ui.view">
      <field name="name">edi.product.malabscad.record.tree</field>
      <field name="model">edi.product.malabscad.record</field>
      <field name="inherit_id" ref="edi_product.record_tree"/>
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <xpath expr="//tree" position="inside">
          <field name="price"/>
          <field name="cost"/>
          <field name="image"/>
        </xpath>
        <field name="description" position="replace"/>
      </field>
    </record>

    <!-- EDI product malabscad record action window -->
    <record id="malabscad_record_action" model="ir.actions.act_window">
      <field name="name">Products</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">edi.product.malabscad.record</field>
      <field name="view_type">form</field>
      <field name="view_id" ref="malabscad_record_tree"/>
      <field name="search_view_id" ref="edi_product.record_search"/>
      <field name="context">{'create': False}</field>
    </record>

    <!-- EDI product malabscad record menu item -->
    <menuitem name="Ma labs CAD" id="malabscad_menu" parent="edi.record_menu"
              sequence="91"/>
    <menuitem id="malabscad_record_menu" action="malabscad_record_action"
              parent="malabscad_menu" sequence="10"/>

    <!-- EDI product malabscad records field -->
    <record id="malabscad_document_form" model="ir.ui.view">
      <field name="name">edi.product.malabscad.document.form</field>
      <field name="model">edi.document</field>
      <field name="inherit_id" ref="edi.document_form"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook[@name='records']" position="inside">
          <page name="product_malabscad" string="Products"
        	attrs="{'invisible':['!',('rec_type_names','ilike',
        				  '/edi.product.malabscad.record/')]}">
            <field name="product_malabscad_ids" readonly="1"/>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
